{{> mod_smartspe/partials/instructions }}

<form method="post" action="{{posturl}}">
  <input type="hidden" name="sesskey" value="{{sesskey}}">
  <div class="card mb-3">
    <div class="card-header h6 m-0">
      {{heading}}
    </div>
    <div class="card-body">

      {{! Team member name }}
      <div class="mb-4">
        <div class="font-weight-bold">
          <strong class="text-muted mr-4">{{#str}}teammember, mod_smartspe{{/str}}
            <span class="text-dark">
              {{membername}}
            </span>
          </strong>
        </div>
      </div>

      {{#questions}}
        <div class="row mb-4">
          {{! Left of the page: question number and text }}
          <div class="{{#isScale}}col-md-8{{/isScale}}{{#isText}}col-12{{/isText}}">
            <div class="d-flex align-items-baseline fw-semibold mb-2">
              <span class="me-2">{{number}}.</span>
              <div class="flex-grow-1">{{{qhtml}}}</div>
            </div>
          </div>

          {{! Right of the page: scale options for scale question }}
          {{#isScale}}
            <div class="col-md-4 text-md-end">
              <div class="d-inline-flex gap-4 justify-content-md-end">
                {{#options}}
                  <div class="form-check form-check-inline mt-3">
                    <input
                      class="form-check-input"
                      type="radio"
                      name="{{groupname}}"
                      id="{{inputid}}"
                      value="{{value}}"
                      {{#checked}}checked{{/checked}}>
                    <label class="form-check-label" for="{{inputid}}">{{value}}</label>
                  </div>
                {{/options}}
              </div>
            </div>
          {{/isScale}}

          {{! Full-width textarea for text question }}
          {{#isText}}
            <div class="col-12">
              <textarea name="text[{{id}}]"
                        id="{{idprefix}}-text-{{id}}"
                        class="form-control"
                        rows="6">{{textvalue}}
              </textarea>
            </div>
          {{/isText}}
        </div>
      {{/questions}}

      {{! Form action buttons }}
      <div class="mt-3">
        {{#showback}}
          <span class="mr-2">
            <button type="submit" name="action" value="back" class="btn btn-secondary">
              {{#str}}back, mod_smartspe{{/str}}
            </button>
          </span>
        {{/showback}}

        {{#showdraft}}
          <span class="mr-2">
            <button type="submit" name="action" value="draft" class="btn btn-secondary">
              {{#str}}savedraft, mod_smartspe{{/str}}
            </button>
          </span>
        {{/showdraft}}

        {{#submit}}
        <span class="mr-2">
          <button type="submit" name="action" value="submit" class="btn btn-primary">
            {{#str}}submit, mod_smartspe{{/str}}
          </button>
        </span>
        {{/submit}}
        {{^submit}}
        <span class="mr-2">
          <button type="submit" name="action" value="save" class="btn btn-primary">
            {{#str}}saveandcontinue, mod_smartspe{{/str}}
          </button>
        </span>
        {{/submit}}
      </div>
    </div>
  </div>
</form>
