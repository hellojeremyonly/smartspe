{{! Submissions List Section }}
<div class="smartspe-submissions">
  <h3>{{#str}}listofsubmission, mod_smartspe{{/str}}</h3>

  {{^hasrows}}
    <div class="alert alert-info">
      {{#str}}nosubmissionrows, mod_smartspe{{/str}}
    </div>
  {{/hasrows}}

  {{#hasrows}}
    <div class="card mt-4">
      <table class="table table-striped">
        <colgroup>
          <col style="width:20%">
          <col style="width:0%">
          <col style="width:20%">
        </colgroup>
        <thead>
        <tr>
          <th>{{#str}}studentnumber, mod_smartspe{{/str}}</th>
          <th>{{#str}}studentname, mod_smartspe{{/str}}</th>
          <th>{{#str}}group, mod_smartspe{{/str}}</th>
          <th>{{#str}}actions, mod_smartspe{{/str}}</th>
        </tr>
        </thead>
        <tbody>
        {{#rows}}
          <tr>
            <td>{{studentid}}</td>
            <td>{{fullname}}</td>
            <td>{{groupname}}</td>
            <td>
              <a class="btn btn-primary btn-sm" href="{{viewurl}}">{{#str}}view, mod_smartspe{{/str}}</a>
            </td>
          </tr>
        {{/rows}}
        </tbody>
      </table>
    {{/hasrows}}
  </div>
</div>

{{! Back button }}
<p class="text-center mt-3">
  <a href="{{backurl}}" class="btn btn-secondary">
    {{#str}}back, mod_smartspe{{/str}}
  </a>
</p>
